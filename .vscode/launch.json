{
  
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "ParseGeo",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/parse-geo"
    },

    {
      "type": "node",
      "request": "launch",
      
      "name": "DEV Program",
      "cwd": "${workspaceFolder}/packages/bworks-api",
      "program": "${workspaceFolder}/packages/bworks-api/server/server.js",
      "restart": true,
      
      "env": {
        "NODE_ENV": "development",
        "DEFAULT_INVOICE_MAIL": "thangtn@bworks.vn",
        "ACTIVE_GOOGLE_MAP_API": "" // google geo location
      },
      "envFile": "${workspaceFolder}/.env"
    },

    {
      "type": "node",
      "request": "launch",
      "name": "DEV INIT",
      "runtimeExecutable": "node",
      "cwd": "${workspaceFolder}/packages/bworks-api",
      "program": "${workspaceFolder}/packages/bworks-api/server/server.js",
      "restart": true,
      "console": "integratedTerminal",
      "outputCapture": "console",
      "internalConsoleOptions": "neverOpen",
      "runtimeArgs": ["--nolazy"],
      "env": {
        "NODE_ENV": "development",
        "NODE_INDEX": "true",
        "NODE_INIT_DATA": "",
        "NODE_INIT_CORE_DATA": "",
        "NODE_INIT_TEST_DATA": "",
        "NODE_BACKUP_TEST_DATA": "",
        "NODE_RESTORE_TEST_DATA": "",
        "NODE_EMS_LOGGER": "true",
        "NODE_EMS_LOGGER_GENERATOR": "",
        "NODE_JOB": "true",
        "NODE_DEBUG_JOB": "",
        "NODE_LOG_STATISTIC_MAT": ""
      },
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "DEV IMPORT_REF_GEO",
      "runtimeExecutable": "node",
      "cwd": "${workspaceFolder}/packages/bworks-api",
      "program": "${workspaceFolder}/packages/bworks-api/server/server.js",
      "restart": true,
      "console": "integratedTerminal",
      "outputCapture": "console",
      "internalConsoleOptions": "neverOpen",
      "runtimeArgs": ["--nolazy"],
      "env": {
        "NODE_ENV": "development",
        "NODE_INIT_DATA": "",
        "NODE_INIT_CORE_DATA": "",
        "NODE_INDEX": "",
        "DEBUG": "",
        "NODE_IMPORT_REF_GEO": "true"
      },
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "TEST PROD BN",
      "runtimeExecutable": "node",
      "cwd": "${workspaceFolder}/packages/bworks-api",
      "program": "${workspaceFolder}/packages/bworks-api/server/server.js",
      "env": {
        "NODE_ENV": "production",
        "NODE_PRODUCT_DB": "bwork-beta"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Current",
      "program": "${file}"
    }
  ]
}
